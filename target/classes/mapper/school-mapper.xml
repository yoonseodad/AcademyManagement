<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="academy.school">

	<select id="getSchool" parameterType="int" resultType="school">
		SELECT
			* 
		FROM tbl_school
		WHERE seq = #{seq}
	</select>

	<select id="getSchoolList" resultMap="school">
		SELECT * FROM tbl_school ORDER BY s_seq DESC
	</select>

	<insert id="insertSchool" parameterType="school">
		INSERT INTO tbl_school (s_name, s_type)
		VALUES(#{s_name}, #{s_type});
	</insert>

	<update id="updateSchool" parameterType="school">
		UPDATE tbl_school
		SET
			s_name = #{s_name}, 
			s_type = ${s_type}
		WHERE s_seq = #{s_seq}
	</update>

	<delete id="deleteSchool" parameterType="int">
		DELETE FROM tbl_school WHERE s_seq = #{s_seq}
	</delete>
	
	<insert id="insertSchool" parameterType="school">
		INSERT INTO tbl_school (s_seq, s_name, s_type) 
		VALUES (#{s_seq}, #{s_name}, #{s_type) 
	</insert>

</mapper>
